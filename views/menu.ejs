<body>
  
  <div id="menu" class="w3-container w3-black w3-xxlarge w3-padding-64">
    <h1 class="w3-center w3-jumbo w3-padding-32">THE MENU</h1>
    <div class="w3-row w3-center w3-border w3-border-dark-grey">
    <a href="#breakfast"><div class="w3-third w3-padding-large w3-red">BREAKFAST</div></a>
    <a href="#lunch"><div class="w3-third w3-padding-large w3-hover-red">LUNCH</div></a>
    <a href="#dinner"><div class="w3-third w3-padding-large w3-hover-red">DINNER</div></a>
    </div>

    <h1 id="starters" class="w3-center w3-jumbo w3-padding-32">STARTERS</h1>
    <div class="w3-container w3-white w3-padding-32">

    <!-- <h1><b>Macaroni</b> <span class="w3-right w3-tag w3-dark-grey w3-round">250</span></h1>
    <p class="w3-text-grey">Bread with pesto, tomatoes, onion, garlic</p>
    <hr> -->

    <% res_arr.forEach(function(item){ %>
      <p><h1><b><%= ""+item.Item_Name %><span class="w3-right w3-tag w3-dark-grey w3-round"> ₹<%=item.Price %></span></b>
         <form action = <%= '/menu/add/'+item.Item_ID %> method="post">
          <button type="button" class="btn btn-danger">+</button>
    </form>
    <%=item.Stock %><form action = <%= '/menu/subtract/'+item.Item_ID %> method="post">
      <button type="button" class="btn btn-danger">-</button>
  </form></p>
      <%})%>
    <div id="pizza" class="w3-container w3-white w3-padding-32">
    <h1><b>Boiled</b> <span class="w3-right w3-tag w3-dark-grey w3-round">200</span></h1>
    <p class="w3-text-grey">Breakfast </p>
    <hr>
    
    <h1><b>Masala Pohe</b> <span class="w3-right w3-tag w3-dark-grey w3-round">250</span></h1>
    <p class="w3-text-grey">With added spices</p>
    <hr>
    
    <!-- <h1><b>Onion Pohe</b> <span class="w3-tag w3-red w3-round">Hot!</span> -->
    <span class="w3-right w3-tag w3-dark-grey w3-round">300</span></h1>
    <p class="w3-text-grey">Added Onions for flavour</p>
    </div>
    
    <h1 id="pasta" class="w3-center w3-jumbo w3-padding-32">WADAPAV</h1>
    <div class="w3-container w3-white w3-padding-32">
    
    <h1><b>Masala</b> <span class="w3-tag w3-grey w3-round">Popular</span>
    <span class="w3-right w3-tag w3-dark-grey w3-round">250</span></h1>
    <p class="w3-text-grey">Special Masala Wadapav</p>
    <hr>
    
    <h1><b>Double wada</b> <span class="w3-right w3-tag w3-dark-grey w3-round">450/span></h1>
    <p class="w3-text-grey">Extra special wada pav serverd hot</p>
    <hr>
    
    <h1><b>Sabudana Vada</b> <span class="w3-right w3-tag w3-dark-grey w3-round">100</span></h1>
    <p class="w3-text-grey">Sabudana vada</p>
    </div>
    
    <h1 id="starters" class="w3-center w3-jumbo w3-padding-32">STARTERS</h1>
    <div class="w3-container w3-white w3-padding-32">
    
    <h1><b>Samosa</b> <span class="w3-tag w3-grey w3-round">Samosa</span>
    <span class="w3-right w3-tag w3-dark-grey w3-round">125</span></h1>
    <p class="w3-text-grey">Ask the waiter</p>
    <hr>
    
    <h1><b>Macaroni</b> <span class="w3-right w3-tag w3-dark-grey w3-round">250</span></h1>
    <p class="w3-text-grey">Bread with pesto, tomatoes, onion, garlic</p>
    <hr>
    
    <h1><b>Garlic bread</b> <span class="w3-right w3-tag w3-dark-grey w3-round">300</span></h1>
    <p class="w3-text-grey">Grilled ciabatta, garlic butter, onions</p>
    </div>
    </div>
